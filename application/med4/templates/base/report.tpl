<table class="formtable">    <tr>        <td class="head" colspan="2">{#head_report#}</td>    </tr>    {if $name}        <tr>        <td class="lbl">Name</td>        <td class="edt"><b>{$name}</b></td>    </tr>    {/if}    {if $info}        <tr>            <td colspan="2" style="padding:0 !important">                <div class="info-msg" style="margin-bottom:0 !important">                    {$info}                </div>            </td>        </tr>    {/if}    {if $datum == true}        <tr>            <td class="lbl">{#lbl_filter_datum#}</td>            <td class="edt reportfilter">{#lbl_von#} {$_datum_von} {#lbl_bis#} {$_datum_bis}</td>        </tr>    {/if}    {if $jahr == true}        <tr>            <td class="lbl">{#lbl_filter_jahr#}</td>            <td class="edt reportfilter">{$_jahr}</td>        </tr>    {/if}    {if $datumsbezug == true}        <tr>            <td class="lbl">{#lbl_filter_datumsbezug#}</td>            <td class="edt reportfilter">{$_datumsbezug}</td>        </tr>    {/if}    {if $kennzahlenjahr == true}        <tr>            <td class="lbl">{#lbl_filter_kennzahlenjahr#}</td>            <td class="edt reportfilter">{$_kennzahlenjahr}</td>        </tr>    {/if}    {if $roh_daten == true}        <tr>            <td class="lbl">{#lbl_filter_roh_daten#}</td>            <td class="edt reportfilter">{$_roh_daten}</td>        </tr>    {/if}    {if $nachsorgeJahr == true}        <tr>            <td class="lbl">{#lbl_filter_nachsorgeJahr#}</td>            <td class="edt reportfilter">{$_nachsorgeJahr}</td>        </tr>    {/if}    {if $rohdatenx == true}        <tr>            <td class="lbl">{#lbl_filter_rohdatenx#}</td>            <td class="edt reportfilter">{$_rohdatenx}</td>        </tr>    {/if}    {foreach from=$packageFilter item=pFilter}        <tr>            <td class="lbl">{$pFilter.config}</td>            <td class="edt reportfilter">{get_item var=$pFilter.field} {$pFilter.add}</td>        </tr>    {/foreach}</table>{if $chart}    <table class="formtable">      <tr>         <td class="head">Farbprofil</td>      </tr>      {foreach from=$chart key=section item=sectionContent}         <tr>            <td class="subhead">{$sectionContent.config}</td>         </tr>         <tr>            <td class="lbl">               <table>                  <tr>                  {foreach from=$sectionContent.content item=sectionConf name=secSettings}                     <td style="border:0 !important">                        <div id="chart_{$section}-{$sectionConf.sec}" class="colorSelector" style="background-color:{$sectionConf.color}">                           <input type="hidden" name="chart_{$section}-{$sectionConf.sec}" value="{$sectionConf.color}" />                        </div>                     </td>                     <td style="border:0 !important">                        {$sectionConf.config}                     </td>                   {/foreach}                   </tr>               </table>            </td>         </tr>      {/foreach}   </table>{/if}<table class="formtable">    <tr>        <td colspan="2">            <table width="100%">                <tr>                    <td style="text-align:right; width:50%">                        <input class="button_large" type="button" name="start_report"   value="{#btn_report#}" alt="{$debug}"/>                    </td>                    <td style="text-align:left;">                        <input class="button"       type="submit" name="action[cancel]" value="{#btn_lbl_cancel#}"/>                    </td>                </tr>            </table>        </td>    </tr></table><div><input type="hidden" name="report" value="1"/><input type="hidden" name="type" value="{$type}"/></div><div title="{#head_rep_gen#}" id="report-dialog" style="display:none;overflow:hidden;"><span id="report-loading">    <br/>    {#msg_report_loading#}    <br/>    <br/>    <span id="loading-info" style="font-size:1.2em;display:none;font-style:italic;">{#msg_gen_report#}</span>    <br/>    <br/>    <span id="parse-time-container" style="font-size:0.8em;display:none;font-style:italic;">      Letzte Auswertung dauerte <span id="parse-time"></span> Sekunden.      <br/>    </span>    <br/>    <span style="font-size:0.8em;">{#msg_report_patience#}</span></span><div id="report-error" style="display:none;">    <div class="err" style="text-align:left;font-size:0.8em;">    {#msg_report_error#}    </div>    <input type="button" class="button close-dialog" value="{#lbl_close#}"/></div><div id="report-popup-help" title="{#help_dialog_title#}"><div class="report-popup-title">{#help_dialog_head#}</div><div class="report-popup-version">{#help_dialog_version#}<span class="version"><!-- --></span></div><div class="help-text-box">    <div class="help-text-ie">{#popup_help_ie#}</div>    <div class="help-text-ff">{#popup_help_ff#}</div>    <div class="help-text-ka">{#popup_help_ka#}</div></div></div>{literal}<script type="text/javascript">$(function(){var $link = $('span.report-help-link'), browser = $.browser.mozilla ? 'ff' : ($.browser.msie ? 'ie' : 'ka'),    options = {modal:true,autoOpen:false,draggable:false,resizable:false,minHeight:175,width:600,position:['center', 150]},    $helpDialog = $('#report-popup-help').css('background-image', 'url(media/img/base/' + browser + '.png)').dialog(options);$helpDialog.find('.help-text-box').children(':not(.help-text-' + browser + ')').remove();browser == 'ka' && $('.report-popup-title').remove(); browser == 'ie' && $('fieldset').css('background', 'none');var text = '';switch(browser){case 'ie': text = 'Microsoft Internet Explorer '; break;case 'ff': text = 'Mozilla Firefox '; break;default: $('.report-popup-version').remove(); break;} text !== '' && $('.report-popup-version .version').append(text + $.browser.version);$link.click(function(){$helpDialog.dialog('open');});});</script>{/literal}</div>